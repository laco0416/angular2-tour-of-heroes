{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es6",
            "dom"
        ],
        "outDir": "tmp_static",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false
    },
    "filesGlob": [
        "src/**/*.ts",
        "!src/bootstrap-dynamic.ts"
    ],
    "files": [
        "src/app.component.ts",
        "src/app.routes.ts",
        "src/bootstrap-static.ts",
        "src/dashboard.component.ts",
        "src/hero-detail.component.ts",
        "src/hero.service.ts",
        "src/hero.ts",
        "src/heroes.component.ts",
        "src/main.module.ts",
        "src/mock-heroes.ts"
    ]
}